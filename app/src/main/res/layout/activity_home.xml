<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.homePage"
    android:background="@color/white"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <ImageView
                android:id="@id/logo_name"
                android:layout_width="94dp"
                android:layout_height="99dp"
                android:layout_marginTop="36dp"
                android:contentDescription="@string/desc"
                android:src="@drawable/logo_hitam"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/logo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="350dp"
                android:layout_height="51dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/baseline_search_24"
                android:drawablePadding="10dp"
                android:hint="@string/search"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/elektronik">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/blue"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="35dp"
                        android:layout_marginRight="23dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/__icon__mobile_phone_"
                            android:padding="13dp"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Elektronik"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/blue"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="35dp"
                        android:layout_marginRight="23dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/__icon__clothes_shirt_"
                            android:padding="13dp"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pakaian"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/blue"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="35dp"
                        android:layout_marginRight="23dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/__icon__shoes_"
                            android:padding="13dp"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sepatu"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="@color/blue"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="35dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/__icon__shopping_bags_"
                            android:padding="13dp"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tas"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rekomendasi"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/LihatSemua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Semua"
                    android:layout_marginLeft="115dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/grey2"
                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        layout="@layout/bottom_navigation_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
