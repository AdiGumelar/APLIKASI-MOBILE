<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginPage"
    android:orientation="vertical"
    android:paddingHorizontal="24dp">

    <ImageView
        android:id="@+id/logo"
        android:contentDescription="@string/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo_2"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="82dp"
        android:layout_gravity="center"
        android:layout_marginTop="82dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="53dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/regsitrasi"
        android:textColor="@color/blue"
        android:textSize="32sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/_icon__profile_circle_"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/bg_editteks"
        android:hint="@string/username"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_alternate_email_24"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/bg_editteks"
        android:hint="@string/email"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_editteks"
        android:hint="@string/password"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="41dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/buat_akun" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sudah_punya_akun"
            android:gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12.75sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_small"
            android:layout_marginStart="4dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12.75sp"
            android:textColor="@color/blue"/>
    </LinearLayout>


</LinearLayout>

